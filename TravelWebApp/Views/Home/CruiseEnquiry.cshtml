@model TravelWebApp.Models.Enquiry

@{
    ViewData["Title"] = "CruiseEnquiry";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@ViewData["About"]</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CruiseEnquiry">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="About" value="@ViewData["About"]" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send Your Enquiry" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
