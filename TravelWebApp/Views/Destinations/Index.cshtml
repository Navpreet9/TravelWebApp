@model IEnumerable<TravelWebApp.Models.Destination>

@{
    ViewData["Title"] = "Index";
}

<div class="container mb-1">
    <div class="text-center">
        <h1 class="display-4">Admin Operations</h1>
        <p>View All Destination</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-dark">Add New Destination</a>
    </p>
    <table class="table table-bordered">

        <thead class="thead-dark">
            <tr>
                <th>
                    Destination Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DestinationName)
                </th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="width:30%">
                    <img src="~/destination/@item.DestinationID@item.Extension" class="img-fluid" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationName)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info mr-2" asp-route-id="@item.DestinationID">Edit</a> |
                    <a asp-action="Details" class="btn btn-secondary mr-2"  asp-route-id="@item.DestinationID">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DestinationID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>