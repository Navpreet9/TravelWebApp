@model IEnumerable<TravelWebApp.Models.Cruise>

@{
    ViewData["Title"] = "Index";
}

<div class="container mb-5">
    <div class="text-center">
        <h1 class="display-4">Admin Operations</h1>
        <p>View All Cruise</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-dark">Add New Cruise</a>
    </p>
    <table class="table table-bordered">

        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CruiseLine)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DestinationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CruiseLine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DestinationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                       $ @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info mr-2" asp-route-id="@item.CruiseID">Edit</a> 
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CruiseID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>